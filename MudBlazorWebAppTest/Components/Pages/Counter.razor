@page "/counter"

@* <MyMudProviders />
 *@
<PageTitle>Counter</PageTitle>

<MudText Typo="Typo.h3" GutterBottom="true">Counter</MudText>
<MudText Class="mb-4">Current count: @Showcounter</MudText>
<MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="(() => IncrementCount())">@ButtonText</MudButton>

@code {
    private int currentCount = 0;
    private string ButtonText = "Count";
    private string Showcounter = ""; 
    private void IncrementCount()
    {
        currentCount++;
        Showcounter = $"u are at {currentCount}";
    }
}
