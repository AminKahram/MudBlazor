@inherits LayoutComponentBase

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>

    <AppBar DrawerToggle="DrawerToggle" />

    <MudDrawer @bind-Open="IsOpen">
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        <BreadCrump />

        <MudContainer MaxWidth="MaxWidth.ExtraExtraLarge">
            @Body

        </MudContainer>
    </MudMainContent>
</MudLayout>

@code
{
    public bool IsOpen =false;
    public void DrawerToggle()
    {
        IsOpen = !IsOpen;
    }
}

